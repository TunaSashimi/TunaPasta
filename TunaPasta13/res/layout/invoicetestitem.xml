<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/relative_tips"
    android:background="@drawable/selector_bg_relative">

    <RelativeLayout
        android:id="@+id/relative_refueling_certificate"
        android:layout_width="280dp"
        android:layout_height="158dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/selector_bg_add_relative">

        <ImageView
            android:id="@+id/image_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/image_click_upload"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/clickupload" />

        <TextView
            android:id="@+id/text_click_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_click_upload"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="油费金额"
            android:textSize="12dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@id/relative_refueling_certificate"
        android:layout_alignRight="@id/relative_refueling_certificate"
        android:layout_below="@id/relative_refueling_certificate"
        android:layout_marginTop="24dp"
        android:background="#e7e7e7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_underline"
        android:layout_alignLeft="@id/relative_refueling_certificate"
        android:layout_marginBottom="-14dp"
        android:text="油费金额"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_underline"
        android:layout_alignRight="@id/relative_refueling_certificate"
        android:layout_marginBottom="-14dp"
        android:text="元"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text_amountmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_underline"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-16dp"
        android:gravity="center_horizontal"
        android:hint="请输入油费金额"
        android:textColor="#666666"
        android:textColorHint="#cccccc"
        android:textSize="16dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/view_underline"
        android:layout_marginTop="14dp" />

</RelativeLayout>
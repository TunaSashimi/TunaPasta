<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/textview_assess"
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#faf9f5"
        android:text="费用预估仅供参考,以实际账单为准" />

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textview_assess"
        android:background="#999999" />

    <TextView
        android:id="@+id/order_confirm_price_runTime"
        style="@style/TextColor_GreyDark_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view01"
        android:layout_marginLeft="10dp"
        android:text="行驶时间1.0小时*25元/时" />

    <TextView
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view01"
        android:layout_marginRight="10dp"
        android:text="25" />

    <View
        android:id="@+id/view02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/order_confirm_price_runTime"
        android:layout_marginLeft="10dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/order_confirm_price_runMileage"
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view02"
        android:layout_marginLeft="10dp"
        android:text="行驶里程25公里*3元/公里" />

    <TextView
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view02"
        android:layout_marginRight="10dp"
        android:text="25" />

    <View
        android:id="@+id/view03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/order_confirm_price_runMileage"
        android:layout_marginLeft="10dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/order_confirm_price_night"
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view03"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="夜间服务费" />

    <TextView
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view03"
        android:layout_marginRight="10dp"
        android:text="25" />

    <View
        android:id="@+id/view04"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/order_confirm_price_night"
        android:layout_marginLeft="10dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/order_confirm_price_airport"
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view04"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="机场服务费" />

    <TextView
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view04"
        android:layout_marginRight="10dp"
        android:text="25" />

    <View
        android:id="@+id/view05"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/order_confirm_price_airport"
        android:layout_marginLeft="10dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/order_confirm_price_coupon"
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view05"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="优惠券" />

    <TextView
        style="@style/TextColor_GreyDark_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view05"
        android:layout_marginRight="10dp"
        android:text="-30" />

    <View
        android:id="@+id/view06"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/order_confirm_price_coupon"
        android:background="#999999" />

    <TextView
        android:id="@+id/order_confirm_price_all"
        style="@style/TextColor_GreyDark_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view06"
        android:layout_marginLeft="10dp"
        android:text="总计" />

    <TextView
        style="@style/TextColor_GreyDark_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view06"
        android:layout_marginRight="10dp"
        android:text="25" />

    <!-- 以下为选择车型 -->

    <FrameLayout
        android:id="@+id/frame01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_confirm_price_all"
        android:layout_marginTop="30dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1.0dp"
            android:background="#80999999" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/frame01" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/tv_title_bar_news"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/icn_car_type_1_selected" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_bar_news"
                    android:gravity="center_horizontal"
                    android:text="经济型" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/tv_title_bar_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/icn_car_type_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_bar_sport"
                    android:gravity="center_horizontal"
                    android:text="舒适型" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/tv_title_bar_play"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/icn_car_type_3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_bar_play"
                    android:gravity="center_horizontal"
                    android:text="商务型" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/tv_title_bar_finance"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/icn_car_type_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_bar_finance"
                    android:gravity="center_horizontal"
                    android:text="豪华型" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view08"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_title_bar"
        android:layout_marginTop="20dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/order_confirm_price"
        style="@style/TextColor_Coffer_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view08"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/icn_arrow_up"
        android:text="价格预估" />

    <Button
        style="@style/TextColor_Coffer_18"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/view08"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/order_confirm_price"
        android:background="@drawable/btn_done_oder"
        android:text="确认" />

</RelativeLayout>
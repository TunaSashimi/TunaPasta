<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textview01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="代码中配置的NavigationBar" />

    <com.tunaPasta06.widget.PressNavigationBar
        android:id="@+id/navigationbartest_ui_PressNavigationBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textview02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigationbartest_ui_PressNavigationBar"
        android:layout_marginTop="10dp"
        android:text="RadioButton修改的的NavigationBar" />

    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/textview02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/xmlshapetest_radiogroup_background"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobutton_taxi"
            style="@style/radiobutton_taxi"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:gravity="center"
            android:text="出租车"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radiobutton_vip"
            style="@style/radiobutton_vip"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="大黄蜂专车"
            android:textColor="#592D2D"
            android:textSize="20dp" />
    </RadioGroup>
</RelativeLayout>
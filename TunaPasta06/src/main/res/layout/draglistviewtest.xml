<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:background="#ff707070"
		android:orientation="horizontal">
		<TextView style="@style/finance_list_edit_view_title"
			android:layout_weight="1.0" android:gravity="left|center"
			android:text="刪除" />
		<TextView style="@style/finance_list_edit_view_title"
			android:layout_weight="3.0" android:gravity="left|center"
			android:text="股名" />
		<TextView style="@style/finance_list_edit_view_title"
			android:layout_weight="1.0" android:gravity="center" android:text="移動" />
	</LinearLayout>
	<com.tunaPasta06.widget.TouchInterceptorListView
		android:id="@+id/list_view" android:layout_width="match_parent"
		android:layout_height="match_parent" android:drawSelectorOnTop="false"
		android:fastScrollEnabled="true" android:textSize="18.0sp" />
</LinearLayout>
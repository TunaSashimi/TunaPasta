<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="从图片展示框中获取Drawable和Bitmap的方法如下所示:" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="原图" />
	<ImageView android:id="@+id/image01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="从原图中获取的Drawable对象" 
		android:textColor="#0000FF"
		/>
	<ImageView android:id="@+id/image02" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="从原图中获取的Bitmap对象" 
		android:textColor="#0000FF"/>
	<ImageView android:id="@+id/image03" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg"
    android:orientation="vertical">

    <View
        android:id="@id/gesturepwd_creat_gap1"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_weight="1.0" />

    <ImageView
        android:layout_width="80.0dp"
        android:layout_height="80.0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0.0dp"
        android:background="@drawable/card_avatar"
        android:padding="4.0dp"
        android:scaleType="fitXY"
        android:src="@drawable/tunasashimi" />

    <View
        android:id="@id/gesturepwd_creat_gap1"
        android:layout_width="match_parent"
        android:layout_height="30.0dp"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/gesturepwd_unlock_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="0.0dp"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="请绘制手势密码"
        android:textColor="@android:color/white"
        android:textSize="16.0sp" />

    <View
        android:id="@id/gesturepwd_creat_gap1"
        android:layout_width="match_parent"
        android:layout_height="4.0dp"
        android:layout_weight="1.0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="0.0dp"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="5次失败后，需要重新登录。"
        android:textColor="@android:color/white"
        android:textSize="12.0sp"
        android:visibility="invisible" />

    <View
        android:id="@id/gesturepwd_creat_gap1"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1.0" />

    <com.tunaPasta11.widget.LockPatternView
        android:id="@+id/gesturepwd_unlock_lockview"
        android:layout_width="280.0dp"
        android:layout_height="280.0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0.0dp" />

    <View
        android:id="@id/gesturepwd_creat_gap1"
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:layout_weight="1.0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dp"
        android:gravity="center_horizontal"
        android:shadowColor="#e0ffffff"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="忘记密码"
        android:textColor="@android:color/white"
        android:textSize="14.0sp" />

    <View
        android:id="@id/gesturepwd_creat_gap1"
        android:layout_width="match_parent"
        android:layout_height="75.0dp"
        android:layout_weight="1.0" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 不是焦点 -->
    <item android:drawable="@drawable/segmented_button_center" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/segmented_button_center_pressed" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <!-- 焦点 -->
    <item android:drawable="@drawable/segmented_button_center_pressed" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/segmented_button_center_pressed" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    <!-- 按住 -->
    <item android:drawable="@drawable/segmented_button_center" android:state_pressed="true"/>

</selector>
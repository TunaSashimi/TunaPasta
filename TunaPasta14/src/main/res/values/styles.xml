<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->

    <!-- Application theme. -->

    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="MonthView_MiniMonthLabel">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/month_mini_day_number</item>
    </style>

    <style name="TextAppearance.MonthView_DayLabel">
        <item name="android:textSize">@dimen/day_label_text_size</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textColor">@color/month_day_names_color</item>
    </style>
    
</resources>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="hint"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@{hint}"
            android:textAllCaps="false"
            android:textSize="30sp" />

    </FrameLayout>
</layout>

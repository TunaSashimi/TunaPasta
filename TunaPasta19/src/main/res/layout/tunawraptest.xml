<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tuna="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tunaWrap"
        android:layout_margin="16dp"
        android:text="show" />

    <com.tunaPasta19.tuna.TunaWrap

        android:id="@+id/tunaWrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layerType="software"
        tuna:tunaWrapBackgroundNormal="#ffffff"
        tuna:tunaWrapBackgroundSelect="#ffffff"
        tuna:tunaWrapLineSpacing="20dp"
        tuna:tunaWrapRadius="5dp"
        tuna:tunaWrapRowSpacing="10dp"
        tuna:tunaWrapStrokeColorNormal="#cccccc"
        tuna:tunaWrapStrokeColorSelect="#ff9933"
        tuna:tunaWrapStrokeWidth="1dp"
        tuna:tunaWrapTextColorNormal="#6e7080"
        tuna:tunaWrapTextColorSelect="#ff9933"
        tuna:tunaWrapTextSize="20dp" />

    <com.tunaPasta19.tuna.TunaView
        android:id="@+id/tunaRectClassic01"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_below="@id/tunaWrap"
        android:layout_margin="@dimen/tuna_button_marginLeft"
        tuna:tunaBackgroundNormal="#444444"
        tuna:tunaTextColorNormal="#ffffff"
        tuna:tunaTextSize="@dimen/tuna_text_textSize"
        tuna:tunaTextValue="#444444"
        tuna:tunaTouchType="edge" />

</RelativeLayout>
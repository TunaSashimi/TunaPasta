<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_deep" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/bg_color_deep"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/head_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/doubleslidinglayouttest_head_default" />

            <TextView
                android:id="@+id/name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/head_view"
                android:text="NAME"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/name_textview"
                android:layout_below="@+id/name_textview"
                android:text="姓名"
                android:textColor="@color/text_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="2px"
            layout="@layout/doubleslidinglayouttestline" >
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="我的任务"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <include
            android:layout_width="match_parent"
            android:layout_height="2px"
            layout="@layout/doubleslidinglayouttestline" >
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="已解决任务"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <include
            android:layout_width="match_parent"
            android:layout_height="2px"
            layout="@layout/doubleslidinglayouttestline" >
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="我的收藏"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <include
            android:layout_width="match_parent"
            android:layout_height="2px"
            layout="@layout/doubleslidinglayouttestline" >
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="我的关注"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <include
            android:layout_width="match_parent"
            android:layout_height="2px"
            layout="@layout/doubleslidinglayouttestline" >
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="我的钱包"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <include
            android:layout_width="match_parent"
            android:layout_height="2px"
            layout="@layout/doubleslidinglayouttestline" >
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="草稿箱"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>
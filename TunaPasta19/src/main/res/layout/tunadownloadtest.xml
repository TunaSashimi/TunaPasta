<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tuna="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tunaDownloadCacheCheck为true联网检查缓存图片大小"
        android:textColor="#ffffff" />

    <com.tunaPasta19.tuna.TunaViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView" />

    <com.tunaPasta19.tuna.TunaRepeat
        android:id="@+id/tunaRepeat"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_below="@id/viewPager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        tuna:tunaRepeatBitmapSrcNormal="@drawable/tunarepeatbartest_relativelayout_tips_1"
        tuna:tunaRepeatBitmapSrcSelect="@drawable/tunarepeatbartest_relativelayout_tips_2"
        tuna:tunaRepeatCurrentIndex="0"
        tuna:tunaRepeatItemFractionBottom="100%"
        tuna:tunaRepeatItemFractionTop="0%"
        tuna:tunaRepeatSelectType="current"
        tuna:tunaRepeatShapeType="custom" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tunaRepeat"
        android:cacheColorHint="#00000000" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tunaload_relative_background">

    <ImageView
        android:id="@+id/imageDriverHalo"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tunaload_imageview_halo" />

    <ImageView
        android:id="@+id/imageDriverSpreadBefore"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tunaload_imageview_driver_spread" />

    <ImageView
        android:id="@+id/imageDriverSpreadMiddle"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tunaload_imageview_driver_spread" />

    <ImageView
        android:id="@+id/imageDriverSpreadAfter"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tunaload_imageview_driver_spread" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tunaload_imageview_background" />

</RelativeLayout>
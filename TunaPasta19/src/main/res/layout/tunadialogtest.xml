<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tuna="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666666" >

    <com.tunaPasta19.tuna.TunaDialog
        android:id="@+id/tunaDialogChoice"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tuna_layout_marginTop"
        android:layerType="software"
        tuna:tunaDialogBackgroundNormal="#ffffff"
        tuna:tunaDialogChoiceBackgroundNormal="#ffffff"
        tuna:tunaDialogChoiceHeight="50dp"
        tuna:tunaDialogChoiceStrokeColor="#ececec"
        tuna:tunaDialogChoiceStrokeWidth="2dp"
        tuna:tunaDialogChoiceTextColorNormal="#4a4a4a"
        tuna:tunaDialogChoiceTextColorPress="#b69f6a"
        tuna:tunaDialogChoiceTextSize="15dp"
        tuna:tunaDialogChoiceTextValueArray="@array/tunadialog_textValueArray_choice"
        tuna:tunaDialogContentTextColor="#796f6d"
        tuna:tunaDialogContentTextDy="-10dp"
        tuna:tunaDialogContentTextPaddingLeft="60dp"
        tuna:tunaDialogContentTextPaddingRight="60dp"
        tuna:tunaDialogContentTextSize="15dp"
        tuna:tunaDialogContentTextValue="请问立即充值吗?"
        tuna:tunaDialogRadius="6dp"
        tuna:tunaDialogStrokeColor="#ffffff"
        tuna:tunaDialogStrokeWidth="2dp"
        tuna:tunaDialogTitleTextColor="#000000"
        tuna:tunaDialogTitleTextDy="20dp"
        tuna:tunaDialogTitleTextSize="20dp"
        tuna:tunaDialogTitleTextValue="立即结算" />

    <com.tunaPasta19.tuna.TunaDialog
        android:id="@+id/tunaDialogConfirm"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_below="@id/tunaDialogChoice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tuna_layout_marginTop"
        tuna:tunaDialogBackgroundNormal="#ffffff"
        tuna:tunaDialogChoiceBackgroundNormal="#ffffff"
        tuna:tunaDialogChoiceBackgroundPress="#b69f6a"
        tuna:tunaDialogChoiceHeight="50dp"
        tuna:tunaDialogChoiceStrokeColor="#ececec"
        tuna:tunaDialogChoiceStrokeWidth="2dp"
        tuna:tunaDialogChoiceTextColorNormal="#4a4a4a"
        tuna:tunaDialogChoiceTextSize="15dp"
        tuna:tunaDialogChoiceTextValueArray="@array/tunadialog_textValueArray_confirm"
        tuna:tunaDialogContentTextColor="#796f6d"
        tuna:tunaDialogContentTextDy="-10dp"
        tuna:tunaDialogContentTextPaddingLeft="60dp"
        tuna:tunaDialogContentTextPaddingRight="60dp"
        tuna:tunaDialogContentTextSize="15dp"
        tuna:tunaDialogContentTextValue="可开取发票"
        tuna:tunaDialogRadius="6dp"
        tuna:tunaDialogStrokeColor="#ffffff"
        tuna:tunaDialogStrokeWidth="2dp"
        tuna:tunaDialogTitleTextColor="#000000"
        tuna:tunaDialogTitleTextDy="20dp"
        tuna:tunaDialogTitleTextSize="20dp"
        tuna:tunaDialogTitleTextValue="立即结算" />

</RelativeLayout>
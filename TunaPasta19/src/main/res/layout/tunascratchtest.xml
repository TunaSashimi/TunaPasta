<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tuna="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <com.tunaPasta19.tuna.TunaScratch
        android:id="@+id/tunaScratch"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_margin="@dimen/tuna_button_margin"
        android:layerType="software"
        tuna:tunaScratchCoverColor="#000000"
        tuna:tunaScratchCoverStrokeWidth="20dp"
        tuna:tunaScratchRadius="10dp"
        tuna:tunaScratchSrc="@drawable/tunasashimi"
        tuna:tunaScratchText="生日快乐,心里有心心"
        tuna:tunaScratchTextColor="#e77c8e"
        tuna:tunaScratchTextSize="22sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dots"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_exit_charts"
            android:layout_width="25.0dp"
            android:layout_height="25.0dp"
            android:layout_gravity="top|left|center"
            android:background="@drawable/ic_home"
            android:onClick="onClotheTypeClick" />

        <ImageView
            android:id="@+id/img_category"
            android:layout_width="60.0dp"
            android:layout_height="60.0dp"
            android:layout_marginLeft="5.0dp"
            android:layout_marginTop="5.0dp" />

        <Button
            android:id="@+id/btn_icon1"
            android:layout_width="40.0dp"
            android:layout_height="45.0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5.0dp"
            android:onClick="onClotheTypeClick"
            android:padding="5.0dp" />

        <Button
            android:id="@+id/btn_icon2"
            android:layout_width="40.0dp"
            android:layout_height="45.0dp"
            android:layout_gravity="center"
            android:layout_marginRight="5.0dp"
            android:onClick="onClotheTypeClick"
            android:padding="0.0dp" />

        <Button
            android:id="@+id/btn_icon3"
            android:layout_width="40.0dp"
            android:layout_height="45.0dp"
            android:layout_gravity="center"
            android:layout_marginRight="5.0dp"
            android:onClick="onClotheTypeClick"
            android:padding="0.0dp" />

        <Button
            android:id="@+id/btn_icon4"
            android:layout_width="40.0dp"
            android:layout_height="45.0dp"
            android:layout_gravity="center"
            android:onClick="onClotheTypeClick"
            android:padding="0.0dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10.0dp"
        android:layout_marginTop="10dp"
        android:text="请先选择服装种类后匹配身高和体型"
        android:textColor="#ffffffff"
        android:textSize="16.0sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="45.0dp"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="160.0dp"
            android:layout_height="40.0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="5.0dp"
            android:background="@drawable/btn_dropdown_available"
            android:paddingLeft="10.0dp"
            android:saveEnabled="false" />

        <Spinner
            android:layout_width="120.0dp"
            android:layout_height="40.0dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_dropdown_available"
            android:paddingLeft="10.0dp" />
    </LinearLayout>
</RelativeLayout>

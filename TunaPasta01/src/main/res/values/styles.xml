<resources>

    <style name="NoTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomProgressBar01">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/customprogressgorizontal01</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="CustomProgressBar02">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/customprogressgorizontal02</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="CustomRadioBtnLeft">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radiogroup_left_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="CustomRadioBtnRight">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radiogroup_right_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="UnionRadioBtn">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/union_radiogroupbackground_selector</item>
        <item name="android:textColor">@drawable/union_radiogrouptextcolor_selector</item>
        <item name="android:button">@null</item>
    </style>
</resources>